<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css"
        integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
        integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
    <!-- Local CSS -->
    <!--link rel="stylesheet" type="text/css" media="screen" href="./../public/assets/css/styles.css"-->
    <link rel="stylesheet" type="text/css" media="screen" href="/assets/css/styles.css" />

    <!-- Latest compiled and minified JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"
        integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
    <script src="https://momentjs.com/downloads/moment-with-locales.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js"
        integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k"
        crossorigin="anonymous"></script>
    <!-- Local JS -->
    <!--script src="./../public/assets/js/main.js"></script-->
    <script src="/assets/js/main.js"></script>
</head>

<body>

    <header class="navbar navbar-expand-sm navbar-dark bg-dark-blue">
        <div class="navbar-brand mr-2 user-role"><%- icon%>
        </div>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggler"
            aria-controls="navbarToggler" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>


        <div class="collapse navbar-collapse" id="navbarToggler">
            <div class="form-inline mr-auto mt-2 mt-sm-0">
                <button class="btn btn-info mr-2 form-control">
                    <i class="fas fa-home"></i>
                </button>
                <div class="btn-group p-0 mr-2 my-2 form-control border-0" role="group">
                    <button id="btnGroupDrop" type="button" class="btn btn-secondary dropdown-toggle w-100"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-plus-circle"></i> New
                    </button>

                    <div class="dropdown-menu bg-dark-blue w-100" aria-labelledby="btnGroupDrop">
                        <button class="btn btn-outline-light border-0 w-100 cmd" data-cmd="modal" data-type="company">
                            <i class="far fa-building"></i> Company
                        </button>
                        <button class="btn btn-outline-light border-0 w-100 cmd" data-cmd="modal" data-type="ticket">
                            <i class="fas fa-clipboard-list"></i> Ticket
                        </button>
                        <button class="btn btn-outline-light border-0 w-100 cmd" data-cmd="modal" data-type="staff">
                            <i class="fas fa-users"></i> Staff
                        </button>
                    </div>
                </div>
            </div>

            <div class="form-inline my-0">
                <button class="btn btn-outline-warning mr-2 mb-2 mb-sm-0 form-control cmd" data-cmd="view"
                    data-type="notifications">
                    <i class="fas fa-bell"></i>
                </button>
                <button class="btn btn-outline-light mr-2 mb-2 mb-sm-0 form-control cmd" data-cmd="view"
                    data-type="profile">
                    <i class="fas fa-user-edit"></i> Profile
                </button>
                <button class="btn btn-danger mr-2 form-control cmd" data-cmd="modal" data-type="logout">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </button>
            </div>
        </div>
    </header>

    <div class="container-fluid">
        <div class="row flex-xl-nowrap">
            <div class="col-12 col-xl-2 col-lg-3 bd-sidebar pl-0 pr-0 pr-lg-2">
                <div class="jumbotron jumbotron-fluid py-3">
                    <div class="container mx-auto text-center justify-content-center">
                        <p class="display-1">
                            <i class="fas fa-user-circle"></i>
                        </p>
                        <p class="lead">Customer Service Platform</p>
                        <form class="form-inline justify-content-center">
                            <div class="input-group">
                                <input class="form-control" type="search" placeholder="Search" aria-label="Search">
                                <div class="input-group-append">
                                    <button class="btn btn-outline-success" type="submit">Search</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <main class="col-12 col-xl-10 col-lg-9 py-md-3 pl-md-2 bd-content">
                <div class="row justify-content-center">

                    <div class="col-12 mb-3">
                        <div class="card border-dark">
                            <div class="card-header bg-secondary">
                                <button class="btn btn-light float-left">
                                    <i class="fas fa-building"></i> Companies
                                </button>
                                <button class="btn btn-warning float-right cmd" data-cmd="modal" data-type="company">
                                    <i class="fas fa-plus"></i>
                                </button>
                            </div>
                            <div class="card-body">
                                <p class="card-text">List of Bussinesses & Companies</p>
                                <div class="table-responsive-lg">
                                    <table class="table table-bordered table-hover m-0" data-type="company">
                                        <thead class="thead-light">
                                            <tr>
                                                <th scope="col"><i class="fas fa-hashtag"></i></th>
                                                <th scope="col"><i class="fas fa-language"></i>
                                                    Name</th>
                                                <th scope="col"><i class="fas fa-user"></i>
                                                    Contact</th>
                                                <th scope="col"><i class="fas fa-envelope"></i>
                                                    Email</th>
                                                <th scope="col"><i class="fas fa-phone"></i>
                                                    Phone</th>
                                                <th scope="col"><i class="fas fa-map-marked-alt"></i>
                                                    Country</th>
                                                <th scope="col"><i class="fas fa-map-marker-alt"></i>
                                                    City</th>
                                                <th scope="col"><i class="fas fa-info-circle"></i>
                                                    More</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% companies.forEach(function(company){ %>
                                            <tr>
                                                <td>
                                                    <%= company.id%>
                                                </td>
                                                <td>
                                                    <%= company.name%>
                                                </td>
                                                <td>
                                                    <%= company.contact%>
                                                </td>
                                                <td>
                                                    <%= company.email%>
                                                </td>
                                                <td>
                                                    <%= company.phone%>
                                                </td>
                                                <td>
                                                    <%= company.country%>
                                                </td>
                                                <td>
                                                    <%= company.city%>
                                                </td>
                                                <td>
                                                </td>
                                            </tr>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="card-footer text-muted">
                                2 days ago
                            </div>
                        </div>
                    </div>

                    <div class="col-12 mb-3">
                        <div class="card border-dark">
                            <div class="card-header bg-secondary">
                                <button class="btn btn-light float-left">
                                    <i class="fas fa-users"></i> Staff
                                </button>
                                <button class="btn btn-warning float-right cmd" data-cmd="modal" data-type="staff">
                                    <i class="fas fa-plus"></i>
                                </button>
                            </div>
                            <div class="card-body">
                                <p class="card-text">List of Staff & Technicians</p>
                                <div class="table-responsive-lg">
                                    <table class="table table-bordered table-hover m-0" data-type="staff">
                                        <thead class="thead-light">
                                            <tr>
                                                <th scope="col"><i class="fas fa-hashtag"></i></th>
                                                <th scope="col"><i class="fas fa-language"></i>
                                                    Name</th>
                                                <th scope="col"><i class="fas fa-users"></i>
                                                    Role</th>
                                                <th scope="col"><i class="fas fa-envelope"></i>
                                                    Email</th>
                                                <th scope="col"><i class="fas fa-phone"></i>
                                                    Phone</th>
                                                <th scope="col"><i class="fas fa-exclamation-circle"></i>
                                                    Status</th>
                                                <th scope="col"><i class="far fa-clock"></i>
                                                    Created</th>
                                                <th scope="col"><i class="fas fa-info-circle"></i>
                                                    More</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% staff.forEach(function(person){ %>
                                            <tr>
                                                <td>
                                                    <%= person.id%>
                                                </td>
                                                <td>
                                                    <%= person.name%>
                                                </td>
                                                <td>
                                                    <%= person.role%>
                                                </td>
                                                <td>
                                                    <%= person.email%>
                                                </td>
                                                <td>
                                                    <%= person.phone%>
                                                </td>
                                                <td>
                                                    <%= person.status%>
                                                </td>
                                                <td>
                                                    <%= person.createdAt%>
                                                </td>
                                                <td>
                                                </td>
                                            </tr>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="card-footer text-muted">
                                2 days ago
                            </div>
                        </div>
                    </div>

                    <div class="col-12 mb-3">
                        <div class="card border-dark">
                            <div class="card-header bg-secondary">
                                <button class="btn btn-light float-left">
                                    <i class="fas fa-clipboard-list"></i> Tickets
                                </button>
                                <button class="btn btn-warning float-right cmd" data-cmd="modal" data-type="ticket">
                                    <i class="fas fa-plus"></i>
                                </button>
                            </div>
                            <div class="card-body">
                                <p class="card-text">List of Tickets</p>
                                <div class="table-responsive-lg">
                                    <table class="table table-bordered table-hover m-0" data-type="ticket">
                                        <thead class="thead-light">
                                            <tr>
                                                <th scope="col"><i class="fas fa-hashtag"></i></th>
                                                <th scope="col"><i class="fas fa-language"></i>
                                                    Name</th>
                                                <th scope="col"><i class="fas fa-building"></i>
                                                    Company</th>
                                                <th scope="col"><i class="fas fa-headset"></i>
                                                    Technician</th>
                                                <th scope="col"><i class="fas fa-flag-checkered"></i>
                                                    Done</th>
                                                <th scope="col"><i class="far fa-clock"></i>
                                                    Created</th>
                                                <th scope="col"><i class="fas fa-sync-alt"></i>
                                                    Updated</th>
                                                <th scope="col"><i class="fas fa-info-circle"></i>
                                                    More</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% tickets.forEach(function(ticket){ %>
                                            <tr>
                                                <td>
                                                    <%= ticket.id%>
                                                </td>
                                                <td>
                                                    <%= ticket.name%>
                                                </td>
                                                <td>
                                                    <%= ticket.company%>
                                                </td>
                                                <td>
                                                    <%= ticket.technician%>
                                                </td>
                                                <td>
                                                    <%= ticket.isFinished%>
                                                </td>
                                                <td>
                                                    <%= ticket.createdAt%>
                                                </td>
                                                <td>
                                                    <%= ticket.updatedAt%>
                                                </td>
                                                <td>
                                                </td>
                                            </tr>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="card-footer text-muted">
                                2 days ago
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header bg-dark-blue">
                </div>
                <div class="modal-body text-center">
                    <div class="container pl-3">
                    </div>
                </div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
    </div>

</body>

</html>