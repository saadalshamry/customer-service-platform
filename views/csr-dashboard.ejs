<form action="/tickets/add" method="POST">
  <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
      
    <div class="modal-content">
        <div class="modal-header bg-dark-blue">
          <button class="btn btn-outline-light" id="modalheader">
            <i class="fas fa-clipboard-list"></i> Add Ticket
          </button>
        </div>
        <div class="modal-body">
          <div class="container">
            <div class="form-row form-group">
              <div class="input-group">
                <div class="input-group-prepend">
                  <button type="button" class="btn btn-info" disabled>
                    <i class="fas fa-user"></i>
                  </button>
                </div>
                <input
                  type="text"
                  class="form-control"
                  name="ticketname"
                  placeholder="Name"
                />
              </div>
            </div>
            <div class="form-row form-group">
              <div class="input-group">
                <div class="input-group-prepend">
                  <button type="button" class="btn btn-info" disabled>
                    <i class="fas fa-user"></i>
                  </button>
                </div>
               <select name="tickettech" id="" class="form-control">
                   <option value="" >Assign technician</option>
                   <% staff.forEach(function(s){if(s.employeeRole === "technician"){ %>
                      <option value="<%= s.employeeName%>"><%= s.employeeName%></option>
                    <%} }) %>
               </select>
              </div>
            </div>
            <div class="form-row form-group">
              <div class="input-group">
                <div class="input-group-prepend">
                  <button type="button" class="btn btn-secondary" disabled>
                    <i class="fas fa-building"></i>
                  </button>
                </div>
                <input
                  type="text"
                  class="form-control"
                  name="ticketcompany"
                  placeholder="Company Name"
                />
              </div>
            </div>
            <div class="form-row form-group">
              <div class="input-group">
                <div class="input-group-prepend">
                  <button type="button" class="btn btn-secondary" disabled>
                    <i class="fas fa-phone"></i>
                  </button>
                </div>
                <input
                  type="number"
                  class="form-control"
                  name="ticketphone"
                  placeholder="Phone Number"
                />
              </div>
            </div>
            <div class="form-row form-group">
              <div class="input-group">
                <div class="input-group-prepend">
                  <button type="button" class="btn btn-secondary" disabled>
                    <i class="fas fa-envelope"></i>
                  </button>
                </div>
                <input
                  type="email"
                  class="form-control"
                  name="ticketemail"
                  placeholder="Email"
                />
              </div>
            </div>
            <div class="form-row form-group">
              <div class="input-group">
                <div class="input-group-prepend">
                  <button type="button" class="btn btn-secondary" disabled>
                    <i class="fas fa-info"></i>
                  </button>
                </div>
                <textarea
                  class="form-control"
                  name="ticketdescription"
                  placeholder="Description"
                  rows="2"
                ></textarea>
              </div>
            </div>
            <div class="form-row form-group">
              <div class="input-group">
                <div class="input-group-prepend">
                  <button type="button" class="btn btn-secondary" disabled>
