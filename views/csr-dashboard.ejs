<div class="container-fluid">
  <div class="row flex-xl-nowrap">
    <div class="col-12 col-xl-2 col-lg-3 bd-sidebar pl-0 pr-2">
      <div class="jumbotron jumbotron-fluid py-3">
        <div class="container mx-auto text-center justify-content-center">
          <p class="display-1">
            <i class="fas fa-user-circle"></i>
          </p>
          <p class="lead">Customer Service Platform</p>
          <form class="form-inline my-2 my-lg-0 justify-content-center">
            <div class="input-group mb-3">
              <input
                class="form-control"
                type="search"
                placeholder="Search"
                aria-label="Search"
              />
              <div class="input-group-append">
                <button
                  class="btn btn-outline-success my-2 my-sm-0"
                  type="submit"
                >
                  Search
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    <main class="col-12 col-xl-10 col-lg-9 py-md-3 pl-md-2 bd-content">
      <div class="row justify-content-center">
        <div class="col-12 mb-3">
          <div class="card border-dark">
            <div class="card-header bg-secondary">
              <button class="btn btn-light float-left">
                <i class="fas fa-building"></i> Companies
              </button>
              <button
                class="btn btn-warning float-right"
                data-toggle="modal"
                data-target="#companyModal"
              >
                <i class="fas fa-plus"></i>
              </button>
            </div>
            <div class="card-body">
              <div class="table-responsive-lg">
                <table class="table table-bordered table-hover m-0">
                  <caption>
                    List of Bussinesses & Companies
                  </caption>
                  <thead class="thead-light">
                    <tr>
                      <th scope="col"><i class="fas fa-hashtag"></i></th>
                      <th scope="col"><i class="fas fa-language"></i> Name</th>
                      <th scope="col"><i class="fas fa-user"></i> Contact</th>
                      <th scope="col"><i class="fas fa-envelope"></i> Email</th>
                      <th scope="col"><i class="fas fa-phone"></i> Phone</th>
                      <th scope="col">
                        <i class="fas fa-map-marked-alt"></i> Country
                      </th>
                      <th scope="col">
                        <i class="fas fa-map-marker-alt"></i> City
                      </th>
                      <th scope="col">
                        <i class="fas fa-info-circle"></i> More
                      </th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <% companies.forEach(function(company){ %>
                      <td>
                        <%= company.id%>
                      </td>
                      <td>
                        <%= company.companyName%>
                      </td>
                      <td>
                        <%= company.companyContact%>
                      </td>
                      <td>
                        <%= company.companyEmail%>
                      </td>
                      <td>
                        <%= company.companyPhone%>
                      </td>
                      <td>
                        <%= company.companyCountry%>
                      </td>
                      <td>
                        <%= company.companyCity%>
                      </td>
                      <td>  <a href="/companies/edit-company/<%= company.id%>">
                        <button
                          class="btn btn-sm btn-outline-primary mx-3"
                          title="Edit"
                        >
                          <i class="fas fa-edit"></i></button
                      ></a>
                      <a href="/companies/delete-company/<%= company.id%>">
                        <button
                          class="btn btn-sm btn-outline-danger"
                          title="Delete"
                        >
                          <i class="fas fa-trash-alt"></i></button
                      ></a></td>
                    </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
            <div class="card-footer text-muted">
              2 days ago
            </div>
          </div>
        </div>


        <div class="col-12 mb-3">
