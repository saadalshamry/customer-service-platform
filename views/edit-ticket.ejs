<% include ./partials/header.ejs%>
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <div class="mx-auto text-center justify-content-center">
      <h1 class="display-1">
        <i class="fas fa-user-circle"></i>
      </h1>
      <p class="lead">Customer Service Platform</p>
    </div>

    <form
      class="w-75 mx-auto"
      action="/tickets/edit-ticket/<%= ticket.id%>"
      method="POST"
    >
      <div class="form-row form-group">
        <div class="input-group">
          <div class="input-group-prepend">
            <button type="button" class="btn btn-info" disabled>
              <i class="fas fa-user"></i>
            </button>
          </div>
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            placeholder="name"
            value="<%= ticket.ticketOwner%>"
          />
        </div>
      </div>
      <div class="form-row form-group">
        <div class="input-group">
          <div class="input-group-prepend">
            <button type="button" class="btn btn-info" disabled>
              <i class="fas fa-user"></i>
            </button>
          </div>
          <select name="tech" id="" class="form-control">
            <option value="<%= ticket.ticketTech%>"
              ><%= ticket.ticketTech%></option
            >
            <% technicians.forEach(function(tech){%>
            <option value="<%= tech.employeeName%>"
              ><%= tech.employeeName%></option
            >
            <%}) %>
          </select>
        </div>
      </div>
      <div class="form-row form-group">
        <div class="input-group">
          <div class="input-group-prepend">
            <button type="button" class="btn btn-secondary" disabled>
              <i class="fas fa-building"></i>
            </button>
          </div>
          <input
            type="text"
            class="form-control"
            id="company"
            name="company"
            placeholder="Company Name"
            value="<%= ticket.ticketCompany%>"
          />
        </div>
      </div>
      <div class="form-row form-group">
        <div class="input-group">
          <div class="input-group-prepend">
            <button type="button" class="btn btn-secondary" disabled>
              <i class="fas fa-phone"></i>
            </button>
          </div>
          <input
            type="number"
            class="form-control"
            id="phone"
            name="phone"
            placeholder="Phone Number"
            value="<%= ticket.ticketPhone%>"
          />
        </div>
      </div>
      <div class="form-row form-group">
        <div class="input-group">
          <div class="input-group-prepend">
            <button type="button" class="btn btn-secondary" disabled>
              <i class="fas fa-envelope"></i>
            </button>
          </div>
          <input
            type="email"
            class="form-control"
            id="email"
            email="email"
            name="email"
            placeholder="Email"
            value="<%= ticket.ticketEmail%>"
          />
        </div>
      </div>
      <div class="form-row form-group">
        <div class="input-group">
          <div class="input-group-prepend">
            <button type="button" class="btn btn-secondary" disabled>
              <i class="fas fa-info"></i>
            </button>
          </div>
          <textarea
            class="form-control"
            id="description"
            name="description"
            placeholder="Description"
            rows="2"
          >
<%= ticket.ticketDescription%></textarea
          >
        </div>
      </div>
      <div class="form-row form-group">
        <div class="input-group">
          <div class="input-group-prepend">
            <button type="button" class="btn btn-secondary" disabled>
              <i class="fas fa-search"></i>
            </button>
          </div>
          <textarea
            class="form-control"
            id="resolution"
            name="resolution"
            placeholder="Resolution"
            rows="2"
          >
<%= ticket.ticketResolution%></textarea
          >
        </div>
      </div>
      <div class="form-row form-group justify-content-center">
        <div class="col-4 cmd" data-type="add">
          <button class="btn btn-primary form-control" type="submit">
            Edit Ticket
          </button>
        </div>
      </div>
    </form>
  </div>
</div>
<% include ./partials/footer.ejs%>
