<% include ./partials/header.ejs%>

  <body>
    <div class="jumbotron jumbotron-fluid">
      <div class="container">
        <div class="mx-auto text-center justify-content-center">
          <h1 class="display-1">
            <i class="fas fa-user-circle"></i>
          </h1>
          <p class="lead">Customer Service Platform</p>
        </div>

        <form class="w-75 mx-auto" action="/auth/login" method= "POST">
          <div class="form-row form-group">
            <div class="input-group">
              <div class="input-group-prepend">
                <button type="button" class="btn btn-secondary" disabled>
                  <i class="fas fa-envelope"></i>
                </button>
              </div>
              <input
                type="email"
                class="form-control"
                id="email"
                placeholder="email"
                name="email"
              />
            </div>
          </div>
          <div class="form-row form-group">
            <div class="input-group">
              <div class="input-group-prepend">
                <button type="button" class="btn btn-warning" disabled>
                  <i class="fas fa-key"></i>
                </button>
              </div>
              <input
                type="password"
                class="form-control"
                id="password"
                placeholder="Password"
                name="password"
              />
            </div>
          </div>
          <div class="form-row form-group justify-content-center">
            <div class="col-3 cmd" data-type="login">
              <button class="btn btn-primary form-control" type="submit">Login</button>
            </div>
            <div class="col-3 cmd" data-type="go-register">
             <a href="/auth/register">
                <button class="btn btn-outline-dark form-control" type="button">
                    Register
                  </button>
             </a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
<% include ./partials/footer.ejs%>
